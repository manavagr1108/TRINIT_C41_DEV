{
  "manifest_version": 2,
  "name": "Extension",
  "version": "1.0.0",
  "description": "Caculate FootPrint",
  "icons": {},
  "minimum_chrome_version": "69.0",
  "background": {
    "scripts": ["background_scripts/main.js"]
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"]
    },
    {
      "matches": ["file:///", "file:///*/"],
      "css": ["content_scripts/index.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "pages/index.html"
  }
}
